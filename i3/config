# i3 config file (Per LÃ¶nn Wege)

set $mod Mod1
set $term st
set $browser firefox
set $quick_browser qutebrowser
set $editor nvim

exec --no-startup-id xset s 600 600
exec --no-startup-id xset dpms 600 600 600

exec --no-startup-id compton -bcf -i 0.9 --backend glx --vsync opengl-swc
exec --no-startup-id unclutter -noevents
exec_always --no-startup-id setxkbmap -option caps:escape se
exec_always --no-startup-id feh --bg-fill ~/.config/wall.png
exec_always --no-startup-id ~/.config/i3/setup_sens.sh
exec --no-startup-id ~/.config/i3/local_startup.sh
exec --no-startup-id xbacklight = 25

hide_edge_borders both
for_window [class="^.*"] border pixel 1
gaps inner 8

# App rules
for_window [class="qutebrowser"] floating enable
for_window [class="Zeal"] floating enable

# colors
client.focused #ffa500 #285577 #ffffff #2e9f4 #ffa500
client.urgent #aa0000 #285577 #ffffff #2e9f4 #aa0000

font pango:PragmataPro Mono 10

bar {
  status_command i3status
  position top
}

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
bindsym $mod+t floating toggle

# kill focused window
bindsym $mod+Shift+q kill

# scratch pad current
bindsym $mod+Shift+m move scratchpad
bindsym $mod+m scratchpad show

# start rofi (a program launcher)
bindsym $mod+d exec dmenu_run

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+Pause exec systemctl poweroff

# switch between last two workspaces
bindsym $mod+Tab workspace back_and_forth

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# resize focused window
bindsym $mod+Shift+o resize shrink width 64 px
bindsym $mod+Shift+i resize shrink height 64 px
bindsym $mod+Shift+u resize grow height 64 px
bindsym $mod+Shift+y resize grow width 64 px

# split in horizontal orientation
bindsym $mod+i split h

# split in vertical orientation
bindsym $mod+s split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Lock screen
bindsym $mod+Shift+p exec --no-startup-id ~/.config/i3/lock.sh

# Multihead
bindsym Mod4+p exec --no-startup-id ~/.config/i3/multihead.sh

# Media
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/sound.sh inc
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/sound.sh dec
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/sound.sh mute
#bindsym XF86AudioPlay exec --no-startup-id ~/.config/i3/media.sh play
#bindsym XF86AudioPause exec --no-startup-id ~/.config/i3/media.sh pause
#bindsym XF86AudioStop exec --no-startup-id ~/.config/i3/media.sh stop
#bindsym XF86AudioPrev exec --no-startup-id ~/.config/i3/media.sh prev
#bindsym XF86AudioNext exec --no-startup-id ~/.config/i3/media.sh next

# Screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/backlight.sh dec
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/backlight.sh inc

# Screenshotting
set $scrot_filename '%Y-%m-%d-%H%M%S_$wx$h.png'
bindsym Print exec --no-startup-id scrot $scrot_filename -e 'mv $f ~/ScreenGrabs/'
bindsym --release Shift+Print exec --no-startup-id scrot -s $scrot_filename -e 'mv $f ~/ScreenGrabs/'

# Apps
bindsym $mod+Return exec $term
bindsym $mod+r exec EDITOR=$editor $term -e ranger
bindsym $mod+e exec $term -e $editor
bindsym $mod+b exec $browser
bindsym $mod+Shift+b exec $quick_browser
